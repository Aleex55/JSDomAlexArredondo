//Cambia el ById por ByClass per modificar els elements d'una classe

//Funcio que cambia tama√± primera lledtra d'una llista:

function changeSize() {
    var listOl = document.getElementsByClassName("nom class")
    var list = listOl[0].children
    for (let i = 0; i < list.length; i++){
        var text = list[i].innerHTML.slice(1);
        list[i].innerHTML = list[i].innerHTML.charAT(0).fontsize + text;
    }
}

